<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="PUnit" transaction-type="JTA">

        <jta-data-source>java:openejb/Resource/PostgresDS</jta-data-source>
        <class>com.example.movierev.Entities.ActorEntity</class>
        <class>com.example.movierev.Entities.MovieEntity</class>
        <class>com.example.movierev.Entities.DirectorEntity</class>
        <class>com.example.movierev.Entities.GenreEntity</class>
        <class>com.example.movierev.Entities.ReviewEntity</class>
        <class>com.example.movierev.Entities.RatingEntity</class>
        <class>com.example.movierev.Entities.UserEntity</class>
        <properties>
            <!-- Hibernate properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>


        </properties>
    </persistence-unit>

</persistence>
